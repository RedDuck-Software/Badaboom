@inject NavigationManager NavigationManager;
@inject IAuthenticationService AuthenticationService;
<nav class="navbar navbar-expand-lg fixed-top" style="background: #f9f9f9;">
    <div class="container">
        <a class="navbar-brand"><h2 class="clr-secondary font-weight-bold">Badaboom</h2></a>
        <button class="navbar-toggler" @onclick="ToggleNavMenu" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="@NavMenuCssClass navbar-collapse" @onclick="CollapseNavMenu">
            <ul class="nav justify-content-center mt-1">

                <li class="nav-item">
                    <a class="nav-link h5 font-weight-bold clr-secondary" href="#">Feauters</a>
                </li>
                <li class="nav-item ml-5 mr-5">
                    <a class="nav-link h5 font-weight-bold clr-secondary" href="#">Pricing</a>
                </li>
                <li class="nav-item mr-6">
                    <a class="nav-link h5 font-weight-bold clr-secondary" href="#">Explorer</a>
                </li>

            </ul>
            <form class="d-flex">
                @if (AuthenticationService.User != null)
                {
                    <button class="btn bclr-secondary round-10 text-clr-light" @onclick="@(_ => NavigationManager.NavigateTo("logout"))"><b>Logout</b></button>
                }
                else
                {
                    <button class="btn bclr-secondary round-10 text-clr-light" @onclick="@(_ => NavigationManager.NavigateTo("login"))"><b>Login</b></button>
                }
            </form>

        </div>
    </div>
</nav>



@code { bool collapseNavMenu = true;

    string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    void CollapseNavMenu()
    {
        collapseNavMenu = true;
    } }
